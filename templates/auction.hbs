<h1>{{name}}</h1>

<button class="btn btn-danger" {{action "delete"}}>Delete</button>

<br>

<div {{action 'addItem'}}>
  {{#link-to 'new-item' this class="btn btn-success"}}
    Add New Item
  {{/link-to}}
</div>

{{# if showItems }}
  {{#each item in items itemController="item"}}
    <p class="items-wrapper">

    {{#link-to 'item' item.id}}
      <div class="row">
        <span class="title">{{item.title}}</span>
        <img class="item-image-preview" src="{{item.image}}">

        <div class="item-info">
          <ul>
            <li><span class="description">Description: {{item.description}}</span></li>

            <li><span class="owner">Current Owner: {{item.owner}}</span></li>

            <li><span class="year-acquired">Year Acquired:  {{item.yearAcquired}}</span></li>
            <br>
            <span class="estStartingPrice">Starting Price:  {{item.estStartingPrice}}</span>
          </ul>
        </div>
      </div>
    {{/link-to}}
    </p>
  {{/each}}
{{/if}}

{{outlet}}
